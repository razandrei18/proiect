<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".atractii.mytown.aventuraParc.mytown.ProgramAventura">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:background="#DFF7DEA9">

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Orar Funcționare"
           android:textSize="24sp"
           android:textAlignment="center"
           android:textStyle="bold"
           android:paddingTop="14dp"
           android:paddingBottom="14dp"
           android:background="#DFF7DEA9"/>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="18sp"
           android:textStyle="bold"
           android:textColor="#D32F2F"
           android:text="CASA SE ÎNCHIDE CU DOUĂ ORE ÎNAINTE DE TERMINAREA PROGRAMULUI."
           android:textAlignment="center"
           android:background="#DFF7DEA9"/>

       <ScrollView
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:background="#DFF7DEA9">


               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="220dp"
                   android:src="@drawable/program1"/>

               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="296dp"
                   android:src="@drawable/program2" />

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="@string/orar_aventura"
                   android:textSize="16sp"
                   android:textStyle="bold"
                   android:paddingLeft="6dp"
                   android:paddingRight="4dp"/>


           </LinearLayout>

       </ScrollView>




   </LinearLayout>


</FrameLayout>