<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".atractii.mytown.piscina.mytown.DetaliiPiscinaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="#560A0000"
            android:padding="4dp"
            android:text="Detalii tehnice"
            android:textColor="#3371A7"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:padding="4dp"
                    android:text="Detalii tehnice piscina acoperită:"
                    android:textColor="@color/colorPrimary"
                    android:textSize="22sp"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/detaliiT_piscina_acop"
                    android:padding="4dp"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:padding="4dp"
                    android:text="Detalii tehnice piscina descoperită pentru adulţi:"
                    android:textColor="@color/colorPrimary"
                    android:textSize="22sp"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/detaliiT_piscina_descopAdulti"
                    android:padding="4dp"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:padding="4dp"
                    android:text="Detalii tehnice piscina descoperită pentru copii:"
                    android:textColor="@color/colorPrimary"
                    android:textSize="22sp"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/detaliiT_piscina_descopCopii"
                    android:padding="4dp"
                    android:textSize="16sp"/>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</FrameLayout>